# Performance Optimizations

# Gzip Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
    # Images'i compress etme (zaten sıkıştırılmış)
    SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|webp)$ no-gzip
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML (no cache)
    ExpiresByType text/html "access plus 0 seconds"
    
    # JSON API (short cache)
    ExpiresByType application/json "access plus 5 minutes"
</IfModule>

# Cache-Control Headers
<IfModule mod_headers.c>
    # Static assets - long cache
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # CSS and JS - medium cache
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
    
    # HTML - no cache
    <FilesMatch "\.(html|php)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# ETag Support
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Disable directory browsing
Options -Indexes

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# URL Rewriting - Community Routing
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /unipanel/
    
    # Allow direct access to PHP files in communities
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^communities/ - [L]
    
    # Communities URL routing: Route /communities/{slug}/ to index.php
    RewriteCond %{REQUEST_URI} ^/unipanel/communities/([a-z0-9_-]+)/?$ [NC]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^communities/([a-z0-9_-]+)/?$ communities/$1/index.php [L,QSA]
    
    # Communities URL routing: Route /communities/{slug} (no trailing slash) to index.php
    RewriteCond %{REQUEST_URI} ^/unipanel/communities/([a-z0-9_-]+)$ [NC]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^communities/([a-z0-9_-]+)$ communities/$1/index.php [L,QSA]
    
    # Communities URL routing with trailing content (but not PHP files)
    RewriteCond %{REQUEST_URI} ^/unipanel/communities/([a-z0-9_-]+)/(.+)$ [NC]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !\.php$
    RewriteRule ^communities/([a-z0-9_-]+)/(.+)$ communities/$1/index.php [L,QSA]
</IfModule>
